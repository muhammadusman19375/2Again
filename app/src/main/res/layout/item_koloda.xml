<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:cardBackgroundColor="@color/bg_color">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/happy_image"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:srcCompat="@drawable/badge_image"
            android:layout_margin="12dp"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:srcCompat="@drawable/badge_image"
            android:layout_margin="12dp"
            android:layout_gravity="end"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="bottom">

            <androidx.cardview.widget.CardView
                android:id="@+id/private_photos"
                android:layout_width="@dimen/_132sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/constraint3"
                app:layout_constraintBottom_toBottomOf="@+id/constraint3"
                app:cardBackgroundColor="@color/top_bar_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/top_bar_color">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/photos"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Private Photos 99+"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/private_videos"
                android:layout_width="@dimen/_132sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/constraint3"
                app:layout_constraintBottom_toBottomOf="@+id/constraint3"
                app:cardBackgroundColor="@color/top_bar_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/top_bar_color">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/videos"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Private Videos 99+"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_details"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/tabText"
                app:layout_constraintEnd_toEndOf="@+id/constraint3"
                app:layout_constraintBottom_toTopOf="@+id/private_videos">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"/>

            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint4"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/constraint3"
                app:layout_constraintStart_toStartOf="@+id/constraint3">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_bulb"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="20dp"
                    android:elevation="30dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/bottom_red"
                    app:layout_constraintTop_toTopOf="@id/constraint4"
                    app:layout_constraintStart_toStartOf="@+id/constraint4">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/bulb"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="M Usman"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    app:layout_goneMarginStart="6dp"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintTop_toTopOf="@id/constraint4"
                    app:layout_constraintStart_toEndOf="@+id/card_view_bulb"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_bulb"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" :21"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintTop_toTopOf="@+id/constraint4"
                    app:layout_constraintStart_toEndOf="@+id/tv_name"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_bulb"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pakistan"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    app:layout_constraintStart_toEndOf="@+id/card_view_bulb"
                    android:layout_marginStart="15dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>