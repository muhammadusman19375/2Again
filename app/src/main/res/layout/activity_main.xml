<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/top_bar_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_margin="8dp"
            android:weightSum="7">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/drawer"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/home_gold_new"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/badge"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_shopping_cart"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_32sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_icon_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_notifications"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_nested_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/constraint2"
            app:layout_constraintStart_toStartOf="@+id/constraint2"
            app:layout_constraintEnd_toEndOf="@+id/constraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="@+id/constraint_nested_1"
                app:layout_constraintStart_toStartOf="@+id/constraint_nested_1"
                app:layout_constraintEnd_toEndOf="@+id/constraint_nested_1"
                app:layout_constraintBottom_toBottomOf="@+id/constraint_nested_1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tabText"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:layout_marginStart="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gift"
                            android:layout_marginEnd="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gifts"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tabText">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:layout_marginStart="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/invitation"
                            android:layout_marginEnd="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invitations"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_nested_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraint_nested_1"
            app:layout_constraintBottom_toTopOf="@+id/constraint_nested_3"
            app:layout_constraintStart_toStartOf="@+id/constraint2"
            app:layout_constraintEnd_toEndOf="@+id/constraint2">

            <com.yalantis.library.Koloda
                android:id="@+id/koloda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:koloda_card_layout="@layout/item_koloda" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_nested_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="@+id/constraint2"
            app:layout_constraintEnd_toEndOf="@+id/constraint2"
            app:layout_constraintBottom_toBottomOf="@+id/constraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/email_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="See Me First"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                android:backgroundTint="@color/bg_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_red_bg"
                    android:gravity="end|center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/cancle"
                        android:layout_marginEnd="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_restart"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_message"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/top_bar_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/hearts"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_33sdp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/top_bar_color"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/star"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                android:backgroundTint="@color/bg_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_heart"
                    android:gravity="start|center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_heart_broken"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>